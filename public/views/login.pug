extends ./layouts/layout.pug

block variables
  title="Login Menfess"

block content
  h1(class="title") Login Menfess
  form(action="/login/callback", method="post")
    div(class="columns")
      div(class="column is-one-quarter")

        // username
        div(class="field")
            div(class="control has-icons-left has-icons-right")
              input(type="text", name="menfessName" class="input" placeholder="Menfess Username")
              span(class="icon is-small is-left")
                <i class="fas fa-at"></i>

        // password
        div(class="field")
            div(class="control has-icons-left has-icons-right")
              input(type="password", name="password" class="input" placeholder="Password")
              span(class="icon is-small is-left")
                <i class="fas fa-lock"></i>

        div(class="field")  
          // button
          div(class="control")
            button(class="button is-link is-fullwidth" type="submit")
              span(class="icon")
                <i class="fas fa-sign-in-alt"></i>
              span| Login

        include ./layouts/back_button.pug
          
  script(src="/js/form-validator.js")  
