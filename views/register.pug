extends ./layouts/layout.pug

block variables
  title="Register Menfess"

block content
  h1(class="title") Register Menfess
  form(action="/register", method="post" id="#form")
    div(class="columns")
      div(class="column is-one-quarter")

        // username
        div(class="field")
            div(class="control has-icons-left has-icons-right")
              input(type="text", name="menfessName" class="input" placeholder="Menfess Name")
              span(class="icon is-small is-left")
                <i class="fas fa-at"></i>

        // trigger
        div(class="field")
            div(class="control has-icons-left has-icons-right")
              input(type="trigger", name="triggerWord" class="input" placeholder="Trigger Word")
              span(class="icon is-small is-left")
                <i class="fas fa-quote-left"></i>

        // password
        div(class="field")
            div(class="control has-icons-left has-icons-right")
              input(type="password", name="password" class="input" placeholder="Password")
              span(class="icon is-small is-left")
                <i class="fas fa-lock"></i>

        // consumer_key
        div(class="field")
          div(class="control has-icons-left has-icons-right")
            input(type="text", name="consumerKey" class="input" placeholder="Consumer Key")
            span(class="icon is-small is-left")
              <i class="fas fa-key"></i>

        // consumer_secret
        div(class="field")
          div(class="control has-icons-left has-icons-right")
            input(type="text", name="consumerSecret" class="input" placeholder="Consumer Secret")
            span(class="icon is-small is-left")
              <i class="fas fa-key"></i>

        div(class="field")  
          // button
          div(class="control")
            button(class="button is-success is-fullwidth", type="submit", id="register")
              span(class="icon")
                <i class="fas fa-paper-plane"></i>
              span| Register

        include ./layouts/back_button.pug
        include ./layouts/errors.pug

  script(src="/js/form-validator.js")
          